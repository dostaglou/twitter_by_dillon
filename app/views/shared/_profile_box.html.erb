<div class="card-profile">
  <div class="container">
  <div class="row m-2">
    <div class="avatar-profile">
      <%= link_to user_path(@user) do  %>
        <%= image_tag 'meintaipei.jpg' %>
      <% end %>
        <%= link_to "Edit", edit_user_registration_path(@user), class: "btn btn-outline-secondary profile-button" %>
      <% if @user == current_user %>
        <% else %>
        <%= link_to "Follow", '#', class: "btn btn-outline-success profile-button" %>
      <% end %>
    </div>
    <div class="card-profile-info ml-2">
      <h3><%= @user.username.capitalize %></h3>
      <p>Following #</p>
      <p>Followers #</p>
      <p>Tweet #</p>
    </div>
  </div>
  <div class="card-profile-bio border-top pt-2 pb-2">
    THIS IS WHERE A BIO WILL GO
    IT COULD BE OF SOME LENGTH
    OR IT COULD BE QUITE SHORT
  </div>
  </div>
</div>
