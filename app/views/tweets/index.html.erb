<%#= javascript_pack_tag 'app' %>

<% if signed_in? %>
  <div class="container mt-4">
    <div class="row justify-content-between">

      <div id="colum-profile" class="col-xs-12 col-md-6 col-lg-4">
        <div id="profile-card-box">
          <%= render 'shared/profile_box', user: @user %>
        </div>
        <div id="write-tweet-card">
          <%= render 'shared/write_tweet' %>
        </div>
        <div id="colum-highlight">
          <div id="highlighted-tweet">
            Click on a tweet to reply to it here
          </div>
        </div>
      </div>

      <div id="column-tweets" class="col-xs-12 col-md-6 col-lg-4 mt-2">
        <%= render 'shared/nav_pills' %>
      </div>
      <div id="" class="col-xs-12 col-md-6 col-lg-4">

      </div>
    </div>
  </div>
<% else %>
  <%= render 'shared/landing_page' %>
<% end %>
