.card-profile {
  width: 100%;
  border: 1px solid black;
  box-shadow: 1px 1px 1px;
  .card-profile-info {
    h3, p {
      margin: 0;
    }
  }
  &:hover {
    box-shadow: 2px 2px 3px;
  }
}

.card-tweet {
  box-shadow: 1px 1px 1px;
  width: 100%;
  margin: 0 auto;
  border: 1px solid black;
  .row {
    i {
      margin: 0;
      font-size: 25px;
      color: pink;
      opacity: .3;
      &:hover {
        opacity: 1;
      }
    }
  }
  &:hover {
    box-shadow: 2px 2px 3px;
  }
}

.card-write-tweet {
  margin: 8px 0;
  border: 1px solid black;
  form{
    width: 94%;
    margin: 0 auto;
    textarea {
      width: 100%;
    }
  }

  &:hover {
    box-shadow: 2px 2px 3px;
  }
}
