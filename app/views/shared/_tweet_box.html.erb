<div class="card-tweet">
  <div class="container">
    <div class="row p-2 mt-2 justify-content-around align-items-center">
      <div class="avatar-tweet">
        <%= link_to '#' do  %>
          <%= image_tag 'meintaipei.jpg' %>
        <% end %>
      </div>
      <%= link_to "#" do  %>
        <i class="fas fa-heart"></i>
      <% end %>
      <%= link_to "#" do  %>
        <i class="fas fa-shoe-prints"></i>
      <% end %>
    </div>
    <div class="card-tweet-tweet ml-2 border-top pt-2 pb-2">
     <%= tweet.content %>
    </div>
    <div class="card-tweet-stats border-top pt-2">
      <div class="d-flex justify-content-around">
        <p>Likes <strong>1</strong></p>
        <p>Replies <strong>1</strong></p>
        <p><%= tweet.created_at.strftime("%b %d, %Y") %></p>
      </div>
    </div>

  </div>

</div>
<br>
